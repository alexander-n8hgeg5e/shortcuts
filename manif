#!/bin/fish

function ff --description 'gimme ebuild'
    find . -name '*.ebuild' -type f
	end


function fff --description 'gimme manifs'
    find . -name '*.ebuild' -type f
	end

for i in (ff)
	echo $i
	ebuild $i manifest

    sudo chown :portage $i
    sudo chmod  g+r $i
end


for i in (fff)
    sudo chown :portage $i
    sudo chmod  g+r $i
end
    
